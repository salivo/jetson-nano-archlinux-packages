# Maintainer: Andrii Salivon <andrijsalivon@plajta.eu>
pkgname=nvidia-l4t-3d-core
pkgver=32.7.6
pkgrel=1
pkgdesc="3D core for Jetson Nano"
arch=('aarch64')
url="https://repo.download.nvidia.com/jetson"
license=('unknown')

provides=("${pkgname}")

sha256sums=('44df4b465417916ac1bdb1c801892c7af948114cadf5a3a1eafb780984600a94')

source=("https://repo.download.nvidia.com/jetson/t210/pool/main/n/nvidia-l4t-3d-core/nvidia-l4t-3d-core_32.7.6-20241104234540_arm64.deb")

prepare() {
  cd "$srcdir"
  for deb in "${srcdir}"/*.deb; do
    ar x "$deb"
    tar xf data.tar.*
    rm data.tar.* control.tar.* debian-binary
  done
  mv usr/lib/aarch64-linux-gnu/* usr/lib/
}

package() {
  install -d "${pkgdir}/usr/lib"
  cp -a "${srcdir}"/usr/lib/* "${pkgdir}"/usr/lib/

  install -d "${pkgdir}/usr/share/doc/"
  cp -a "${srcdir}"/usr/share/doc/* "${pkgdir}/usr/share/doc/"
}
